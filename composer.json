{
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=5.5",
        "composer/installers": "1.*",
        "johnpbloch/wordpress": "4.5.*",
		"wpackagist-plugin/akismet": "3.1.11",
        "wpackagist-plugin/all-in-one-seo-pack": "2.3.5.1",
		"wpackagist-theme/evolve": "*"
    },
    "extra": {
        "wordpress-install-dir": "project/wordpress",
        "installer-paths": {
            "project/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "project/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "project/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    }
}